  "animations": {
    "fadeIn": {
      "keyframes": "@keyframes fadeIn { from { opacity: 0; } to { opacity: 1; } }",
      "duration": "0.5s",
      "timingFunction": "ease-in"
    },
    "bounceIn": {
      "keyframes": "@keyframes bounceIn { 0% { transform: scale(0.3); opacity: 0; } 50% { transform: scale(1.05); } 70% { transform: scale(0.9); } 100% { transform: scale(1); opacity: 1; } }",
      "duration": "0.6s",
      "timingFunction": "cubic-bezier(0.68, -0.55, 0.265, 1.55)"
    },
    "slideUp": {
      "keyframes": "@keyframes slideUp { from { transform: translateY(20px); opacity: 0; } to { transform: translateY(0); opacity: 1; } }",
      "duration": "0.4s",
      "timingFunction": "ease-out"
    },
    "scaleIn": {
      "keyframes": "@keyframes scaleIn { from { transform: scale(0.8); opacity: 0; } to { transform: scale(1); opacity: 1; } }",
      "duration": "0.3s",
      "timingFunction": "ease-out"
    },
    "wordHighlight": {
      "keyframes": "@keyframes wordHighlight { 0% { background-color: transparent; } 50% { background-color: rgba(255, 0, 0, 0.3); } 100% { background-color: transparent; } }",
      "duration": "0.3s",
      "timingFunction": "ease-in-out"
    },
    "yellowSyncHighlight": {
      "keyframes": "@keyframes yellowSyncHighlight { 0% { color: #ffffff; text-shadow: 2px 2px 6px rgba(0, 0, 0, 0.9); } 50% { color: #ffff00; text-shadow: 0 0 10px #ffff00, 2px 2px 6px rgba(0, 0, 0, 0.9); } 100% { color: #ffffff; text-shadow: 2px 2px 6px rgba(0, 0, 0, 0.9); } }",
      "duration": "0.4s",
      "timingFunction": "ease-in-out"
    },
    "zoomInThrow": {
      "keyframes": "@keyframes zoomInThrow { 0% { transform: scale(0.1); opacity: 0; } 30% { transform: scale(1.3); opacity: 0.8; } 60% { transform: scale(0.9); opacity: 1; } 100% { transform: scale(1); opacity: 1; } }",
      "duration": "0.7s",
      "timingFunction": "cubic-bezier(0.68, -0.55, 0.265, 1.55)"
    },
    "singleWordAppear": {
      "keyframes": "@keyframes singleWordAppear { 0% { opacity: 0; transform: scale(0.5); } 50% { opacity: 1; transform: scale(1.1); } 100% { opacity: 1; transform: scale(1); } }",
      "duration": "0.4s",
      "timingFunction": "ease-out"
    },
    "waveTextPink": {
      "keyframes": "@keyframes waveTextPink { 0% { color: #ffffff; text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.8); transform: translateY(0px) scale(1); } 25% { color: #7f6ee0; text-shadow: 0 0 15px #7f6ee0, 2px 2px 4px rgba(0, 0, 0, 0.8); transform: translateY(-8px) scale(1.1); } 50% { color: #6a5acd; text-shadow: 0 0 20px #6a5acd, 2px 2px 4px rgba(0, 0, 0, 0.8); transform: translateY(-12px) scale(1.15); } 75% { color: #7f6ee0; text-shadow: 0 0 15px #7f6ee0, 2px 2px 4px rgba(0, 0, 0, 0.8); transform: translateY(-8px) scale(1.1); } 100% { color: #ffffff; text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.8); transform: translateY(0px) scale(1); } }",
      "duration": "0.8s",
      "timingFunction": "ease-in-out"
    },
    "scaleTextGreen": {
      "keyframes": "@keyframes scaleTextGreen { 0% { color: #ffffff; text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.8); transform: scale(0.8); opacity: 0.7; } 20% { color: #00ff41; text-shadow: 0 0 20px #00ff41, 2px 2px 4px rgba(0, 0, 0, 0.8); transform: scale(1.5); opacity: 1; } 80% { color: #00ff41; text-shadow: 0 0 20px #00ff41, 2px 2px 4px rgba(0, 0, 0, 0.8); transform: scale(1.5); opacity: 1; } 100% { color: #ffffff; text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.8); transform: scale(0.8); opacity: 0.7; } }",
      "duration": "0.6s",
      "timingFunction": "ease-in-out"
    }
